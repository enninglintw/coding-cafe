<%= form_for(@cafe) do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :tel %><br>
    <%= f.text_field :tel %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>