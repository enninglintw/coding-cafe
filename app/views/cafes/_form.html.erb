<%= form_for(@cafe) do |f| %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :tel %><br>
    <%= f.text_field :tel %>
  </div>

  <div class="field">
  <%= f.label "公休日" %><br>
  <% @days.each do |day| %>
    <%= f.check_box :"#{day}_holiday" %>
    <%= f.label "#{day}" %><br>
  <% end %>
  </div>

  <% @days.each do |day| %>
  <div class="field">
    <%= f.label "#{day}" %><br>
    <%= f.text_field :"#{day}_open" %> - 
    <%= f.text_field :"#{day}_close" %>
  </div>
  <% end %>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>