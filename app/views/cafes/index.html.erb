      <th>閉店</th>
      <th>開店</th>
      <th></th>
      <th>閉店</th>
    </tr>
  </thead>

  <tbody>
    <% @cafes.each do |cafe| %>
      <tr>
        <td><%= link_to cafe.name, cafe %></td>
        <td><%= link_to "Edit", edit_cafe_path(cafe) %></td>
        <td><%= link_to cafe.address, "http://maps.google.com/?q=#{cafe.name}|#{cafe.address}", :target => "_blank" %></td>
        <td><%= cafe.tel %></td>

        <td><% if cafe.mon_open == nil %>
              <%= "?" %>
            <% else %>
              <%= l cafe.mon_open %>
            <% end %></td>
        <td>-</td>
